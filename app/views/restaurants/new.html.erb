<h1>New restaurant</h1>

<%# <%= render "form", restaurant: @restaurant %>

<%= simple_form_for(@restaurant) do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
  </div>
  <div class="form-actions btn btn-success">
    <%= f.button :submit %>
  </div>
<% end %>

<br>

<div>
  <%= link_to "Back to restaurants", restaurants_path, class: "btn btn-primary" %>
</div>
