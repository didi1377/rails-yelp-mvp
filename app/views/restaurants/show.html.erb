<h1>Restaurnat Details</h1>
<p><strong><%= @restaurant.name %></strong></p>
<p>Cuisine: <%= @restaurant.category %></p>
<p>Address: <%= @restaurant.address %></p>
<p>Phone: <%= @restaurant.phone_number %></p>

<h2>Reviews</h2>

<% if @reviews.any? %>
  <ul>
    <% @reviews.each do |review| %>
      <li>
        <strong>Rating:</strong> <%= review.rating %> <br>
        <strong>Comment:</strong> <%= review.content %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No reviews yet.</p>
<% end %>

<h2>Leave a review</h2>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating, collection: 0..5, prompt: "Select a rating" %>
  <%= f.input :content %>
  <%= f.button :submit, "Submit Review", class: "btn btn-primary mb-3" %>
<% end %>


<%= link_to "Back to all restaurants", restaurants_path, class: "btn btn-primary" %>
