<h1>Add a Review for <%= @restaurant.name %></h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating, collection: 0..5, prompt: "Select a rating" %>
  <%= f.input :content %>
  <%= f.button :submit, "Submit Review", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to restaurant", restaurant_path(@restaurant), class: "btn btn-primary" %>
